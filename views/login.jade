extends layout
block content
    title=title
    h1 Please Login

    p=message
    form(action='/login' method='post')
        label Username
        input(name='username' type = 'text' required)
        br
        label Password
        input(name='password' type='password' required)
        br
        input(name='login_button' type='submit' value='Login')
    |<p> if you don't have an account then you can create one <a href="/signup">here</a>.</p>